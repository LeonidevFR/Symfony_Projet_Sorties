{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div>
            <img style="max-width: 450px; max-height: 900px;" src="{{ asset('img/userAvatar/' ~ user.avatar) }}" alt="Photo">
        </div>
        <div class="margin-left">
            <h2>{{ user.pseudo }}</h2>
            <p>Prénom : {{ user.firstName }}</p>
            <p>Nom : {{ user.lastName }}</p>
            <p>Téléphone : {{ user.phoneNumber }}</p>
            <p>Email : {{ user.email }}</p>
            <p>Campus : {{ user.campus }}</p>
        </div>
    </div>
    <div class="center-btn">
        {% if app.user.id == user.id %}
            <button class="btn"><a href="{{ path('app_profil_edit') }}">Modifier</a></button>
        {% endif %}
        <button class="btn"><a href="{{ path('app_main_home') }}">Retour</a></button>
    </div>
{% endblock %}