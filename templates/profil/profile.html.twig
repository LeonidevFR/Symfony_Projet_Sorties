{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div>
            <img src="{{ asset('img/userAvatar/' ~ app.user.avatar) }}" alt="Photo">
        </div>
        <div class="margin-left">
            <h2>{{ app.user.pseudo }}</h2>
            <p>Prénom : {{ app.user.firstName }}</p>
            <p>Nom : {{ app.user.lastName }}</p>
            <p>Téléphone : {{ app.user.phoneNumber }}</p>
            <p>Email : {{ app.user.email }}</p>
            <p>Campus : {{ app.user.campus }}</p>
        </div>
    </div>
    {% if app.user.id %}
        <button class="btn"><a href="{{ path('app_profil_app_profil_edit', {'id': app.user.id}) }}">Modifier</a></button>
    {% endif %}
    <button class="btn"><a href="{{ path('app_main_home') }}">Retour</a></button>
{% endblock %}